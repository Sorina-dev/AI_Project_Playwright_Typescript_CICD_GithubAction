{
  "environments": {
    "development": {
      "jsonPlaceholder": {
        "baseUrl": "https://jsonplaceholder.typicode.com",
        "timeout": 10000,
        "retries": 3
      },
      "reqres": {
        "baseUrl": "https://reqres.in/api", 
        "timeout": 10000,
        "retries": 3
      }
    },
    "staging": {
      "jsonPlaceholder": {
        "baseUrl": "https://jsonplaceholder.typicode.com",
        "timeout": 15000,
        "retries": 5
      },
      "reqres": {
        "baseUrl": "https://reqres.in/api",
        "timeout": 15000,
        "retries": 5
      }
    },
    "production": {
      "jsonPlaceholder": {
        "baseUrl": "https://jsonplaceholder.typicode.com",
        "timeout": 30000,
        "retries": 3
      },
      "reqres": {
        "baseUrl": "https://reqres.in/api",
        "timeout": 30000,
        "retries": 3
      }
    }
  },

  "headers": {
    "default": {
      "Content-Type": "application/json",
      "Accept": "application/json",
      "User-Agent": "Playwright-API-Tests/1.0"
    },
    "jsonOnly": {
      "Content-Type": "application/json",
      "Accept": "application/json"
    },
    "formData": {
      "Content-Type": "application/x-www-form-urlencoded",
      "Accept": "application/json"
    }
  },

  "testConfiguration": {
    "parallel": {
      "workers": 4,
      "maxFailures": 10,
      "timeout": 30000
    },
    "sequential": {
      "workers": 1,
      "maxFailures": 5,
      "timeout": 60000
    },
    "performance": {
      "workers": 1,
      "maxFailures": 1,
      "timeout": 120000,
      "measurePerformance": true
    }
  },

  "logging": {
    "level": "info",
    "enableRequestLogging": true,
    "enableResponseLogging": true,
    "enablePerformanceLogging": true,
    "logToFile": false,
    "logDirectory": "./test-logs"
  },

  "reporting": {
    "generateHtmlReport": true,
    "generateJsonReport": true,
    "generateJunitReport": true,
    "reportDirectory": "./test-results",
    "includeScreenshots": false,
    "includeTraces": false
  }
}